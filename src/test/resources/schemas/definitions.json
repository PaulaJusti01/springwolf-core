def build_html_email(nome_modelo, projeto, status):
    cor_status = "#28a745" if status.lower() == "sucesso" else "#dc3545"

    return f"""
    <html>
    <body style="font-family: Arial, sans-serif; margin: 0; padding: 0;">
        <div style="background-color: #003366; padding: 20px; color: white;">
            <h2>Notificação de Execução de Modelo</h2>
        </div>

        <div style="padding: 20px;">
            <p>Olá,</p>
            <p>Segue o status da execução:</p>

            <ul>
                <li><strong>Projeto:</strong> {projeto}</li>
                <li><strong>Modelo:</strong> {nome_modelo}</li>
                <li><strong>Status:</strong> <span style="color: {cor_status}; font-weight: bold;">{status.upper()}</span></li>
            </ul>

            <p>Este é um e-mail automático, por favor não responda.</p>
        </div>

        <div style="background-color: #f1f1f1; padding: 10px; text-align: center; font-size: 12px; color: #555;">
            Enviado por sistema automatizado • Itaú
        </div>
    </body>
    </html>
    """
