import os
from src.llms import Mistral

def start():
    model_path = os.getenv("MODEL_PATH", "artifacts/Mistral-7B-Instruct-v0.1")
    model = Mistral(model_path=model_path, device="auto")
    model.load_tokenizer()
    model.load_model()
    model.create_pipeline(max_output_length=128)
    return model
