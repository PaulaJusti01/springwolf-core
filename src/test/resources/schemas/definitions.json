resource "aws_lambda_permission" "allow_sqs_to_invoke_lambda" {
  statement_id  = "AllowSQSTrigger"
  action        = "lambda:InvokeFunction"
  function_name = var.lambda_function_name
  principal     = "sqs.amazonaws.com"
  source_arn    = aws_sqs_queue.minha_fila.arn
}

resource "aws_lambda_event_source_mapping" "sqs_lambda_mapping" {
  event_source_arn = aws_sqs_queue.minha_fila.arn
  function_name    = var.lambda_function_arn
  batch_size       = 10
  enabled          = true
}
