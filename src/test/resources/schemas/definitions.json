def format_tags(tags_dict: Dict[str, str]) -> str:
    """
    Recebe um dicionário simples {"chave": "valor"} e monta o bloco:
      tags = {
        "chave" = "valor"
      }
    que é o que o Terraform do flavor espera.
    """
    terraform_tags = "  tags = {\n"
    for key, value in tags_dict.items():
        terraform_tags += f'    "{key}" = "{value}"\n'
    terraform_tags += "  }\n"
    return terraform_tags
