def get_tags(flavor_params: Dict) -> str:
    """
    LÃª as tags de dentro do flavor_params e monta:
      - Plataforma (fixa: iulotus)
      - Experiment_id  (vem do flavor_params)
      - Model_name     (vem do flavor_params)
      - + quaisquer outras tags jÃ¡ configuradas lÃ¡
    """

    # ðŸ‘‰ aqui eu assumo uma estrutura assim:
    # flavor_params = {
    #   "experiment_id": "exp-123",
    #   "model_name": "meu-modelo",
    #   "tags": [
    #       {"key": "Owner", "value": "Time X"},
    #       {"key": "Squad", "value": "Time Y"},
    #   ]
    #   ...outros campos...
    # }

    experiment_id = flavor_params.get("experiment_id", "")
    model_name = flavor_params.get("model_name", "")

    # 1) tags padrÃ£o
    tags_dict: Dict[str, str] = {
        "Plataforma": "iulotus",
        "Experiment_id": experiment_id,
        "Model_name": model_name,
    }

    # 2) tags extras configuradas pelo usuÃ¡rio
    tags_list = flavor_params.get("tags", [])  # lista de {key, value}
    for tag in tags_list:
        key = tag.get("key")
        value = tag.get("value")
        if key and value:
            tags_dict[key] = value

    # 3) devolve o bloco pronto em texto
    return format_tags(tags_dict)
