resource "aws_sqs_queue" "lotus_notification_queue" {
  name = "lotus-notification-queue"

  policy = jsonencode({
    Version = "2012-10-17"
    Id      = "AllowRS7ToSendMessages"
    Statement = [
      {
        Sid       = "AllowEventBridgeRS7SendMessage"
        Effect    = "Allow"
        Principal = {
          AWS = "arn:aws:iam::123456789012:root"
        }
        Action   = "sqs:SendMessage"
        Resource = "arn:aws:sqs:sa-east-1:LO6_ACCOUNT_ID:lotus-notification-queue"
        Condition = {
          ArnEquals = {
            "aws:SourceArn" = "arn:aws:events:sa-east-1:123456789012:event-bus/default"
          }
        }
      }
    ]
  })
}
